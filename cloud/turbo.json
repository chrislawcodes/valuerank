{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/tests/setup.ts"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build", "^test"],
      "outputs": ["coverage/**"],
      "passThroughEnv": ["DATABASE_URL", "DIRECT_URL", "JWT_SECRET"]
    },
    "test:coverage": {
      "dependsOn": ["build", "^test:coverage"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
